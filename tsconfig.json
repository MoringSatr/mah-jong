{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "assets/script/",
  },
  "include": [
    "typescript/**/*"
  ],
  "exclude": [
    "node_modules",
    "library",
    "local",
    "temp",
    "build",
    "settings",
    "assets"
  ]
}
